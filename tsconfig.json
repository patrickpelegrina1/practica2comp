{
  "compilerOptions": {
    "lib": [
      "es2017"
    ],
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist/",
    "baseUrl": "."
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "practices/**/*.ts"
  ]
}
